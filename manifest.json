{
  "manifest_version": 3,
  "name": "SpamChecker",
  "version": "1.0",
  "description": "Check your emails for spam traps, spammy words, and compliance with GDPR, CASL, and CAN-SPAM regulations.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
